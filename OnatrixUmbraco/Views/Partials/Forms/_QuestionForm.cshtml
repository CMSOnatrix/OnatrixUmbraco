@using OnatrixUmbraco.ViewModels
@model QuestionFormViewModel
@using(Html.BeginUmbracoForm("HandleQuestionForm", "QuestionForm", FormMethod.Post, new {novalidate = "novalidate", id = "questionForm"}))
{
     <div class="question-inputs">
        <div class="form-group name">
             <label asp-for="Name" class="hidden"></label>
             <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" />
             <span asp-validation-for="Name"> </span>
        </div>
        <div class="form-group email">
             <label asp-for="Email" class="hidden"></label>
            <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" />
            <span asp-validation-for="Email"> </span>
        </div>
        <div class="form-group message">
            <label asp-for="Message" class="hidden"></label>
            <textarea asp-for="Message" placeholder="@Html.DisplayNameFor(x => x.Message)"></textarea>
            <span asp-validation-for="Message"> </span>
        </div>

    </div>
    <button type="submit" class="button question-btn">Submit</button>
   
    
}
