@using OnatrixUmbraco.ViewModels
@model CallbackFormViewModel

@using(Html.BeginUmbracoForm("HandldeCallBackForm", "Form", FormMethod.Post, new {novalidate = "novalidate", id = "callbackForm"}))
{
    <div class="callback-inputs">
        <div class="form-group">
             <label asp-for="Name" class="hidden"></label>
             <input asp-for="Name" type="text" placeholder="@Html.DisplayNameFor(x => x.Name)" />
             <span asp-validation-for="Name"> </span>
        </div>
        <div class="form-group">
             <label asp-for="Email" class="hidden"></label>
            <input asp-for="Email" type="text" placeholder="@Html.DisplayNameFor(x => x.Email)" />
            <span asp-validation-for="Email"> </span>
        </div>
        <div class="form-group">
            <label asp-for="Phone" class="hidden"></label>
            <input asp-for="Phone" type="text" placeholder="@Html.DisplayNameFor(x => x.Phone)" />
            <span asp-validation-for="Phone"> </span>
        </div>

        <div>
            <label asp-for="SelectedOption" class="hidden"></label>
        </div>
        <div class="select-drop">
        <select asp-for="SelectedOption" class="callback-select">
            <option value="" disabled hidden selected>Please select an option</option>

            @foreach (var option in Model.Options)
            {
                <option value="@option">@option</option>
            }
        </select>

        <span asp-validation-for="SelectedOption"> </span>

        </div>

        <button type="submit" class="callback-submit-btn">Submit</button>

   </div>
}